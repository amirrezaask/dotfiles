keybind = cmd+n=next_tab
keybind = cmd+p=previous_tab
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right
keybind = cmd+f=toggle_split_zoom

keybind = ctrl+shift+n=next_tab
keybind = ctrl+shift+p=previous_tab
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+f=toggle_split_zoom
