# Font
font-family = TX-02
font-style = Medium

# Why this isn't the default ?
macos-titlebar-style=tabs

window-colorspace = "display-p3"

mouse-hide-while-typing = true

cursor-style-blink = false

macos-option-as-alt = true

shell-integration-features = no-cursor,no-sudo,no-title

window-inherit-working-directory = false

auto-update=download

background-opacity = 0.85

background-blur = true

# Keybindings (macosify)
keybind = cmd+n=next_tab
keybind = cmd+p=previous_tab
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right
keybind = cmd+f=toggle_split_zoom


theme = rose-pine
background = 000000
