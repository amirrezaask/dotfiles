[
  // Universal
  { "key": "ctrl+n",              "command": "selectNextSuggestion", "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion" },
  { "key": "ctrl+p",              "command": "selectPrevSuggestion", "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion" },
  { "key": "ctrl+n",              "command": "workbench.action.quickOpenSelectNext", "when": "inQuickOpen" },
  { "key": "ctrl+p",              "command": "workbench.action.quickOpenSelectPrevious", "when": "inQuickOpen" },

  // macos
  { "key": "cmd+shift+o",         "command": "workbench.action.files.openFileFolderInNewWindow", },
  { "key": "cmd+o",               "command": "workbench.action.files.openFileFolder" },
  { "key": "cmd+j",               "command": "workbench.action.terminal.toggleTerminal" },
  { "key": "cmd+shift+w",         "command": "workbench.action.closeAllEditors" },
  { "key": "cmd+l cmd+d",         "command": "editor.action.revealDefinition",     "when": "editorHasDefinitionProvider && editorTextFocus" },
  { "key": "cmd+l cmd+r",         "command": "editor.action.goToReferences",       "when": "editorHasReferenceProvider && editorTextFocus" },
  { "key": "cmd+l cmd+i",         "command": "editor.action.goToImplementation",   "when": "editorHasImplementationProvider && editorTextFocus" },
  { "key": "cmd+l cmd+n",         "command": "editor.action.rename",               "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly" },
  { "key": "cmd+,",               "command": "workbench.action.navigateBack",      },

  // Linux/Windows
  { "key": "ctrl+shift+o",          "command": "workbench.action.files.openFileFolderInNewWindow", },
  { "key": "ctrl+o",                "command": "workbench.action.files.openFileFolder" },
  { "key": "ctrl+j",                "command": "workbench.action.terminal.toggleTerminal" },
  { "key": "ctrl+shift+w",          "command": "workbench.action.closeAllEditors" },
  { "key": "ctrl+l ctrl+d",         "command": "editor.action.revealDefinition",     "when": "editorHasDefinitionProvider && editorTextFocus" },
  { "key": "ctrl+l ctrl+r",         "command": "editor.action.goToReferences",       "when": "editorHasReferenceProvider && editorTextFocus" },
  { "key": "ctrl+l ctrl+i",         "command": "editor.action.goToImplementation",   "when": "editorHasImplementationProvider && editorTextFocus" },
  { "key": "ctrl+l ctrl+n",         "command": "editor.action.rename",               "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly" },
  { "key": "ctrl+,",                "command": "workbench.action.navigateBack",      },

]