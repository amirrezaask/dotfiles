#!/usr/bin/env bash
source ~/.env

export ACME="$HOME/src/github.com/amirrezaask/dotfiles/bin"
export PATH="$PLAN9/bin:$ACME:$PATH"
export SHELL=rc
FONT='JetBrainsMonoNerdFontCompleteM-Regular'
FONTSIZE='15'
plumbproc=$(ps ax | grep -v grep | grep plumber)
if [ -z "$plumbproc" ]; then
    9 plumber
fi
fontsrvproc=$(ps ax | grep -v grep | grep fontsrv)
if [ -z "$fontsrvproc" ]; then
    9 fontsrv -m /mnt/font &
fi

$PLAN9/bin/acme -a -f "/mnt/font/$FONT/${FONTSIZE}a/font" &

