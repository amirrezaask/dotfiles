{
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 14,
  "editor.lineHeight": 2.0,
  "files.autoSave": "onFocusChange",
  "workbench.editor.editorActionsLocation": "hidden",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.mouseWheelScrollSensitivity": 2,
  "window.restoreWindows": "none",
  "workbench.settings.editor": "json",
  "terminal.integrated.macOptionIsMeta": true,
  "files.simpleDialog.enable": true,
  "[go]": { "editor.formatOnSave": true },
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "explorer.confirmDelete": false,
  "workbench.startupEditor": "none",
  "go.toolsManagement.autoUpdate": true,
  "editor.bracketPairColorization.enabled": false,
  "extensions.ignoreRecommendations": true,
  "gitProjectManager.baseProjectsFolders": [ "~/dev" ],
  "gitProjectManager.openInNewWindow": true,
  "git.blame.statusBarItem.enabled": true,
  "vim.foldfix": true,
  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.timeout": 200,
  "vim.normalModeKeyBindings": [
    { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },
    { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] },
    { "before": ["<leader>", "f"], "commands": [ "workbench.view.search" ], },
    { "before": [ "<leader>", "e" ], "commands": [ "workbench.view.explorer" ], },
    { "before": [ "<leader>", "<space>" ], "commands": [ "workbench.action.showCommands" ], },
    { "before": [ "<leader>", "<tab>" ], "commands": [ "workbench.action.quickOpen" ], },
    { "before": [ "<leader>", "o" ], "commands": ["workbench.action.gotoSymbol"], },
    { "before": [ "<leader>", "O" ], "commands": ["workbench.action.showAllSymbols"], },
    { "before": [ "g", "r" ], "commands": [ "references-view.findReferences" ], },
    { "before": [ "g", "l" ], "commands": [ "editor.action.showHover" ], },
    { "before": [ "K" ], "commands": [ "editor.action.showHover" ], },
    { "before": [ "[", "[" ], "commands": [ "editor.action.marker.prev" ], },
    { "before": [ "]", "]" ], "commands": [ "editor.action.marker.next" ], },
    { "before": [ "C"], "commands": ["editor.action.quickFix"] },
    { "before": [ "R" ], "commands": [ "editor.action.rename" ] },
    { "before": ["{"], "commands": [ "references-view.prev"] },
    { "before": ["}"], "commands": [ "references-view.next"] },
    { "before": ["<c-q>"], "commands": ["references-view.tree.focus"] },
    { "before": ["j"], "after": ["g", "j"]},
    { "before": ["k"], "after": ["g", "k"]}
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<esc>"
      ],
    },
    {
      "before": [
        "k",
        "j"
      ],
      "after": [
        "<esc>"
      ],
    },
  ],
  "workbench.editor.showTabs": "none",
  "window.commandCenter": true,
  "workbench.navigationControl.enabled": false,
  "workbench.colorTheme": "poimandres-noitalics-storm",
  "symbols.hidesExplorerArrows": false,
  "workbench.iconTheme": "symbols",
}