set $term kitty
set $menu wofi --show drun -a

set $font_family ""
set $font_size 12

font pango:$font_family $font_size


include /etc/sway/config.d/*
include ~/.config/sway/*.conf
include ~/.config/current-theme/sway.config

client.focused          $primary $bg $fg
client.focused_inactive $inactive $bg $fg
client.unfocused        $inactive $bg $fg
client.urgent           $urgent $bg $fg

bar {
    position top
	colors {
        background $bg
        statusline $fg
        focused_workspace $active $bg $fg
        inactive_workspace $inactive $bg $fg
        urgent_workspace $urgent $bg $fg
    }
    # Status command
	status_command /home/amirreza/.config/sway/status.sh

    # Tray icons
    tray_output primary
    tray_padding 6
}

