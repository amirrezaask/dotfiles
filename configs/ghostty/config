theme = TokyoNight Night
font-family = Maple Mono
font-size = 14
mouse-hide-while-typing = true
macos-option-as-alt = true
window-padding-balance = true
window-padding-x = 10
window-padding-y = 10
shell-integration-features=no-cursor
maximize=true
cursor-style-blink=false
cursor-style = block
macos-titlebar-style=tabs
background-opacity = 0.95
background-blur-radius = 20
adjust-cell-height = 2
adjust-cell-width = 0
window-theme = auto

keybind = cmd+n=next_tab
keybind = cmd+p=previous_tab

keybind = cmd+[=previous_tab
keybind = cmd+]=next_tab

keybind = cmd+t=new_tab

keybind = cmd+shift+n=new_window

keybind = cmd+shift+f=toggle_split_zoom

# Creating Split
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down

# Navigating Splits
keybind = cmd+down=goto_split:down
keybind = cmd+left=goto_split:left
keybind = cmd+up=goto_split:up
keybind = cmd+right=goto_split:right

# Sizing splits
keybind = cmd+0=equalize_splits
keybind = cmd+shift+up=resize_split:up,20
keybind = cmd+shift+down=resize_split:down,20
keybind = cmd+shift+left=resize_split:left,20
keybind = cmd+shift+right=resize_split:right,20
