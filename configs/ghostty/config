window-padding-balance = true
shell-integration-features=no-cursor
maximize=true
macos-titlebar-style=tabs
theme = Everforest Dark Hard

keybind = shift+right=next_tab
keybind = shift+left=previous_tab
keybind = cmd+n=next_tab
keybind = cmd+p=previous_tab
keybind = cmd+[=previous_tab
keybind = cmd+]=next_tab
keybind = cmd+enter=new_tab
keybind = cmd+shift+enter=new_window
keybind = cmd+f=toggle_split_zoom
keybind = cmd+d=new_split:right
keybind = cmd+down=goto_split:down
keybind = cmd+left=goto_split:left
keybind = cmd+up=goto_split:up
keybind = cmd+right=goto_split:right

