#! /bin/sh

# Remove old rules
bspc rule -r "*"

# kill already running polybar
pkill polybar
pkill comton
pkill dunst
pkill sxhkd
# Autostart applications
sxhkd &
compton &
polybar default &
xfce4-power-manager &
dunst &

# Desktops and monitors
bspc monitor eDP-1 -d emacs terms www music movie chat steam 8 9

# Keyboard layout
setxkbmap -layout us,ir -option "ctrl:nocaps" -option "grp:shifts_toggle"

# move polybar down in fullscreen mode
xdo above -t $(xdo id -n root) $(xdo id -a polybar)

# set wallpaper
nitrogen --set-zoom-fill --random ~/w/dotfiles/wallpapers/

# Some values
bspc config top_padding 30
bspc config window_gap 3 
bspc config border_width 1 
bspc config bottom_padding 0
bspc config borderless_monocle true

# Rules for different applications
bspc rule -a "Emacs" state=fullscreen desktop=^1
