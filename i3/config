exec_always setxkbmap -layout us -option ctrl:nocaps
exec_always setxkbmap -option 'grp:alt_shift_toggle'
exec_always xrandr --output HDMI-1 --right-of eDP-1
#compton for transparency
exec --no-startup-id compton -b

