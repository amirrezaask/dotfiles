{
  "window.restoreWindows": "none", // do not reopen everything when I launch.
  "editor.fontSize": 14,
  "editor.fontFamily": "Cascadia Code, Fira Code, Consolas",
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  "workbench.settings.editor": "json",
  "window.title": "${dirty}${separator}${folderName}",
  
  // Disable/hide useless UI
  "editor.minimap.enabled": false,
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "toggle",
  "workbench.editor.editorActionsLocation": "hidden",
  "window.commandCenter": false,
  "workbench.startupEditor": "newUntitledFile",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editor.showTabs": "single",
  "workbench.editor.enablePreview": false,
  "editor.bracketPairColorization.enabled": false,
  "workbench.activityBar.location": "top",

  // Golang
  "[go]": { "editor.formatOnSave": true },
  "go.addTags": { "options": "" },

  // Git project manager
  "gitProjectManager.baseProjectsFolders": [ "~/w", "C:\\w\\" ],

  // Rust
  "[rust]": {
    "editor.formatOnSave": true
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "window.customTitleBarVisibility": "auto",
  "workbench.colorTheme": "GitHub Dark",

}