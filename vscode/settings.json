{
  "window.restoreWindows": "none", // do not reopen everything when I launch.
  "editor.fontSize": 14,
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  "window.title": "${dirty} ${rootPath}",
  "workbench.settings.editor": "json",

  // Disable/hide useless UI
  "editor.minimap.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "window.commandCenter": false,
  "workbench.startupEditor": "none",
  "workbench.editor.showTabs": "multiple",
  "workbench.activityBar.location": "top",

  // Golang
  "[go]": { "editor.formatOnSave": true },
  "go.addTags": { "options": "" },

  // Git project manager
  "gitProjectManager.baseProjectsFolders": [
    "~/w",
    "C:\\w\\"
  ],

  // Rust
  "[rust]": { "editor.formatOnSave": true },

  // Vim
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-p>": false,
    "<C-w>": false,
    "<C-j>": false,
  },
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": [ "j", "k" ], "after": [ "<esc>" ] },
    { "before": [ "k", "j" ], "after": [ "<esc>" ] },
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [ "R" ], "commands": [ "editor.action.rename" ] },
    { "before": [ "<leader>", "p" ], "commands": [ "workbench.action.quickOpen" ] },
    { "before": [ "P" ], "commands": [ "workbench.action.showCommands" ] },
    { "before": [ "<leader>", "k" ], "commands": [ "workbench.action.toggleSidebarVisibility" ] },
    { "before": [ "K" ], "commands": [ "editor.action.showHover" ] },
    { "before": [ "<leader>", "c" ], "commands": [ "editor.action.quickFix" ] },
  ],
}