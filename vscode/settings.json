{
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.preferredLightColorTheme": "Visual Studio Light",
  "extensions.ignoreRecommendations": true,
  "window.autoDetectColorScheme": true,
  "window.title": "${folderPath}",
  "window.dialogStyle": "custom",
  "editor.fontSize": 14,
  "editor.wordWrap": "on",
  "workbench.settings.editor": "json",
  "workbench.editor.showIcons": false,
  "breadcrumbs.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.untitled.hint": "hidden",
  "editor.lightbulb.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.tips.enabled": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.accessibilitySupport": "off",
  "editor.inlayHints.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "[jsonc]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "json.format.keepLines": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "[rust]": { "editor.formatOnSave": true, "editor.tabSize": 4 },
  "[go]": { "editor.formatOnSave": true },
  "[yaml]": { "editor.guides.indentation": true },
  "workbench.startupEditor": "none",
  "go.toolsManagement.autoUpdate": true,
  "rest-client.showResponseInDifferentTab": true,
  "rest-client.requestNameAsResponseTabTitle": true,
  "rest-client.previewOption": "body",
  "rest-client.previewResponseInUntitledDocument": true,
  "gitProjectManager.baseProjectsFolders": [ "~/w", "~/dev" ],
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.statusBar.visible": true,
  "explorer.confirmDragAndDrop": false,
  "workbench.editor.showTabs": false,
  "explorer.autoReveal": false,
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  "vim.leader": " ",
  "vim.insertModeKeyBindings": [
    { "before": [ "j", "k" ], "after": [ "<esc>" ] },
    { "before": [ "k", "j" ], "after": [ "<esc>" ] } ],
  "vim.normalModeKeyBindings": [
    { "before": [ "F" ], "commands": [ "editor.action.formatDocument" ] },
    { "before": [ "C" ], "commands": [ "editor.action.quickFix" ] },
    { "before": [ "<C-d>" ], "after": [ "<C-d>", "z", "z" ] },
    { "before": [ "<C-u>" ], "after": [ "<C-u>", "z", "z" ] },
    { "before": [ "[", "d" ], "commands": [ "editor.action.marker.prev" ] },
    { "before": [ "]", "d" ], "commands": [ "editor.action.marker.next" ] },
    { "before": [ "g", "r" ], "commands": [ "editor.action.goToReferences" ] },
    { "before": [ "g", "d" ], "commands": [ "editor.action.revealDefinition" ] },
    { "before": [ "g", "i" ], "commands": [ "editor.action.goToImplementation" ] },
    { "before": [ "R" ], "commands": [ "editor.action.rename" ] },
    { "before": [ "K" ], "commands": [ "editor.action.showHover" ] },
    { "before": [ "j" ], "after": [ "g", "j" ] },
    { "before": [ "k" ], "after": [ "g", "k" ] },
    { "before": [ "<C-l>" ], "after": [ "<C-w>", "l" ] },
    { "before": [ "<C-k>" ], "after": [ "<C-w>", "k" ] },
    { "before": [ "<C-j>" ], "after": [ "<C-w>", "j" ] },
    { "before": [ "<C-h>" ], "after": [ "<C-w>", "h" ] },
    { "before": [ "<leader>", "p" ], "commands": [ "workbench.action.quickOpen" ] },
    { "before": [ "<leader>", "P" ], "commands": [ "workbench.action.showCommands" ] },
    { "before": [ "<leader>", "o" ], "commands": [ "workbench.action.gotoSymbol" ] },
    { "before": [ "<leader>", "O" ], "commands": [ "workbench.action.showAllSymbols" ] },
    { "before": [ "<leader>", "h" ], "commands": [ "workbench.action.splitEditorDown" ] },
    { "before": [ "<leader>", "v" ], "commands": [ "workbench.action.splitEditorRight" ] },
    { "before": [ "=" ], "commands": [ "editor.action.smartSelect.expand" ] },
    { "before": [ "-" ], "commands": [ "editor.action.smartSelect.shrink" ] },
    { "before": [ "<C-w>" ], "commands": [ "workbench.action.closeActiveEditor" ] },
  ],
  "workbench.colorTheme": "Visual Studio Light",
}
