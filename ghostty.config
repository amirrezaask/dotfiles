macos-titlebar-style=tabs
maximize = true
window-colorspace = "display-p3"
cursor-style-blink = false
mouse-hide-while-typing = true
macos-option-as-alt = true
shell-integration-features = no-cursor,no-sudo,no-title
window-padding-x = 3
window-padding-y = 10

keybind = cmd+n=next_tab
keybind = cmd+p=previous_tab
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right
keybind = cmd+f=toggle_split_zoom

keybind = ctrl+shift+n=next_tab
keybind = ctrl+shift+p=previous_tab
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+f=toggle_split_zoom

# vague2k/vague.nvim colorscheme
palette = 0=#252530
palette = 1=#d8647e
palette = 2=#7fa563
palette = 3=#f3be7c
palette = 4=#6e94b2
palette = 5=#bb9dbd
palette = 6=#aeaed1
palette = 7=#cdcdcd
palette = 8=#606079
palette = 9=#e08398
palette = 10=#99b782
palette = 11=#f5cb96
palette = 12=#8ba9c1
palette = 13=#c9b1ca
palette = 14=#bebeda
palette = 15=#d7d7d7

# background = #141415
background = 1D1D1F
foreground = #cdcdcd
cursor-color = #cdcdcd
selection-background = #252530
selection-foreground = #cdcdcd
