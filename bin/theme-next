#!/usr/bin/env bash

THEMES_DIR="$HOME/.config/themes/"
CURRENT_THEME_LINK="$HOME/.config/themes/current"

THEMES=($(find "$THEMES_DIR" -type d ! -name 'current' -mindepth 1 -maxdepth 1 | sort))
TOTAL=${#THEMES[@]}

# Get current theme from symlink
if [[ -L "$CURRENT_THEME_LINK" ]]; then
  CURRENT_THEME=$(realpath "$CURRENT_THEME_LINK")
else
  # Default to first theme if no symlink exists
  CURRENT_THEME=$(realpath "${THEMES[0]}")
fi

echo $THEMES

# Find current theme index
INDEX=0
for i in "${!THEMES[@]}"; do
  THEMES[$i]=$(realpath "${THEMES[$i]}")

  if [[ "${THEMES[$i]}" == "$CURRENT_THEME" ]]; then
    INDEX=$i
    break
  fi
done
echo $INDEX

# Get next theme (wrap around)
NEXT_INDEX=$(((INDEX + 1) % TOTAL))
echo $NEXT_INDEX
NEW_THEME=${THEMES[$NEXT_INDEX]}
echo $NEW_THEME
NEW_THEME_NAME=$(basename "$NEW_THEME")
echo $NEW_THEME_NAME

theme-set $NEW_THEME_NAME
