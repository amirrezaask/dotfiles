#!/usr/bin/env bash

action="$1"
available_actions=(
	"üîí Lock" 
	"‚èª Shutdown" 
	"‚Üª Reboot" 
	"‚Ü™ Logout" 
	"Ôçô Suspend"
)

if [[ ! -n "$action" ]]; then
	action=`printf '%s\n' "${available_actions[@]}" | wofi --show dmenu -p "Select Action: "`
fi

if [[ ! -n "$action" ]]; then
	exit 1
fi

action="${action,,}"
echo "Performing action: $action"

case $action in
	*suspend*)
		systemctl suspend
		;;
	*lock*)
		hyprlock
		;;
	*shutdown*)
		systemctl poweroff
		;;
	*reboot*)
		systemctl reboot
		;;
	*logout*)
		hyprctl dispatch exit
		;;
esac
