#!/usr/bin/env bash
# save the file

filename=`echo $samfile`

extension=`echo "${filename##*.}"`

printf "put\n" | 9p write acme/$winid/ctl

if [ $extension == 'go' ]; then
	if [ -x "$(command -v goimports)" ]; then
		goimports -w $samfile
	else
		gofmt -w $samfile
	fi
fi


printf "get\n" | 9p write acme/$winid/ctl