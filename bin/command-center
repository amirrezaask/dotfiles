#!/usr/bin/env bash

menu() {
	local prompt="$1"
	local options="$2"
	printf "${options}" | wofi --show dmenu -p "$prompt"
}

case "$(menu 'Select Action:' 'ğŸ–¥ï¸Apps \nSystem \nâ— Toggle Light/Dark Mode \nğŸŒ‘Dark Mode \nâ˜€ Light Mode \nğŸ¨ Themes \nğŸ”¤ Fonts\n')" in
	*Apps*)
		launcher
		;;
	*System*)
		session-control
		;;
	*"Toggle Light/Dark Mode"*)
		toggle-color-mode
		;;
	*"Dark Mode"*)
		dark-mode
		;;
	*"Light Mode"*)
		light-mode
		;;
	*Themes*)
		select-theme
		;;
	*Fonts*)
		select-font
		;;
	*)
		echo "Invalid action"
		exit 1
		;;
esac


