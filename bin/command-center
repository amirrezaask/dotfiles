#!/usr/bin/env bash

menu() {
	printf "$2" | wofi --show dmenu -p "$1"
}

show_style_menu() {
	case "$(menu 'Style Menu:' 'ó°¸Œ  Theme\nî™™  Font\nâ—  Toggle Light/Dark Mode \nğŸŒ‘  Dark Mode \nâ˜€  Light Mode')" in
		*"Theme"*)
			select-theme
			;;
		*"Font"*)
			show_font_menu
			;;
		*"Toggle"*)
			toggle-light-dark-mode
			;;
		*Dark*)
			dark-mode
			;;
		*Light*)
			light-mode
			;;
		*)
			echo "Invalid action"
			exit 1
			;;
	esac
}

show_font_menu() {
	font-set "$(fonts-list | fuzzy_menu "Select font: ")"
}

show_theme_menu() {
	theme-set "$(themes-list | fuzzy_menu "Select theme: ")"
}

show_menu() {
	case "$(menu 'Select Action:' 'ó°€»  Apps \nî¯  Style\nï€‘  System')" in
		*Apps*)
			launcher
			;;
		*System*)
			session-control
			;;
		*Style*)
			show_style_menu
			;;
		*)
			echo "Invalid action"
			exit 1
			;;
	esac
}


if [[ -n "$1" ]]; then
	$1
else
	show_menu
fi
