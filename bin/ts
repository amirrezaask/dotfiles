#!/usr/bin/env bash
dir=$(find $HOME/dev $HOME/w -maxdepth 1 -type d | fzf-tmux)
if [ "$dir" != "" ]; then
    tmux new-session -t $(basename $dir) -c "$dir" -A -d
    if [ "$TMUX" != "" ]; then
        # inside a tmux session
        tmux switch-client -t $(basename $dir)
    else
        # outside tmux
        tmux attach -t $(basename $dir)
    fi

fi

