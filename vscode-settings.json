{
    "editor.fontFamily": "Berkeley Mono",
    "editor.fontWeight": "bold",
    "editor.fontSize": 14,
    "editor.cursorBlinking": "solid",
    "terminal.integrated.fontSize": 15,
    "window.restoreWindows": "none", // never re open anything dude
    "workbench.settings.editor": "json", // Who wants a shitty UI ?
    "terminal.integrated.macOptionIsMeta": true,
    "security.workspace.trust.untrustedFiles": "open",
    "editor.mouseWheelScrollSensitivity": 4,
    "files.simpleDialog.enable": true,
    "editor.wordWrap": "on",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "outline.icons": false,
    "workbench.editor.enablePreview": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.stickyScroll.enabled": false,
    "git.decorations.enabled": false,
    "workbench.tips.enabled": false,
    "editor.minimap.enabled": false,
    "workbench.editor.wrapTabs": true,
    "diffEditor.renderSideBySide": false,
    "explorer.confirmPasteNative": false,
    "workbench.navigationControl.enabled": false,
    "editor.autoClosingQuotes": "never",
    "editor.autoClosingDelete": "never",
    "editor.autoClosingComments": "never",
    "editor.autoClosingBrackets": "never",
    "http.proxy": "http://localhost:2081",
    "[go]": { "editor.formatOnSave": true },
    "[odin]": {"editor.formatOnSave": true },
    "go.addTags": { "options": "" },
    "go.toolsManagement.autoUpdate": true,
    "git.confirmSync": false,
    "scm.diffDecorations": "none",
    "remote.autoForwardPortsSource": "hybrid",
    "explorer.confirmDelete": false,
    "vim.leader": " ",
    "vim.useSystemClipboard": true,
    "vim.timeout": 200,
    "vim.normalModeKeyBindings": [
    { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },
    { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] },
    { "before": ["<leader>", "f"], "commands": [ "workbench.view.search" ], },
    { "before": [ "<leader>", "e" ], "commands": [ "workbench.view.explorer" ], },
    { "before": [ "<leader>", "<space>" ], "commands": [ "workbench.action.showCommands" ], },
    { "before": [ "<leader>", "<tab>" ], "commands": [ "workbench.action.quickOpen" ], },
    { "before": [ "<leader>", "o" ], "commands": ["workbench.action.gotoSymbol"], },
    { "before": [ "<leader>", "O" ], "commands": ["workbench.action.showAllSymbols"], },
    { "before": [ "g", "r" ], "commands": [ "references-view.findReferences" ], },
    { "before": [ "g", "l" ], "commands": [ "editor.action.showHover" ], },
    { "before": [ "K" ], "commands": [ "editor.action.showHover" ], },
    { "before": [ "[", "[" ], "commands": [ "editor.action.marker.prev" ], },
    { "before": [ "]", "]" ], "commands": [ "editor.action.marker.next" ], },
    { "before": [ "C"], "commands": ["editor.action.quickFix"] },
    { "before": [ "R" ], "commands": [ "editor.action.rename" ] },
    { "before": ["{"], "commands": [ "references-view.prev"] },
    { "before": ["}"], "commands": [ "references-view.next"] },
    { "before": ["<c-q>"], "commands": ["references-view.tree.focus"] },
    { "before": ["j"], "after": ["g", "j"]},
    { "before": ["k"], "after": ["g", "k"]}
  ],
  "vim.insertModeKeyBindings": [ { "before": ["j", "k"], "after": [ "<esc>" ], }, { "before": ["k", "j"], "after": [ "<esc>" ], }, ],
  "simpleBrowser.focusLockIndicator.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "extensions.ignoreRecommendations": true,
  "cursor.cpp.enablePartialAccepts": true,
  "workbench.editor.showTabs": "none",
}
