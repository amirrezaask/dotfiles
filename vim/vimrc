set ignorecase
set modeline
set autoread
set cursorline
set guicursor
set compatible
set encoding=utf-8
set hlsearch
set history=700
set tabpagemax=100
set ruler
set mouse=a
set wrap
set autoindent
set termguicolors
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set backup
set writebackup
set swapfile
set clipboard=unnamedplus
set splitright
set splitbelow

set cursorline

map <C-j> <C-w>j
map <C-k> <C-w>k
map <C-l> <C-w>l
map <C-h> <C-w>h
map Q <nop>
map ; :

map jk <esc>
map jj <esc>
map kk <esc>
map kj <esc>

set statusline=%l:%L\ %m%f
