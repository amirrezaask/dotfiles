[
  // Run Task
  {
    "key": "cmd+b",
    "command": "workbench.action.tasks.reRunTask",
  },
  {
    "key": "cmd+shift+b",
    "command": "workbench.action.tasks.runTask"
  },
  // Open new window
  {
    "key": "cmd+shift+o",
    "command": "workbench.action.files.openFileFolderInNewWindow",
  },
  {
    "key": "cmd+ctrl+p",
    "command": "gitProjectManager.openProject",
  },
  {
    "key": "cmd+alt+p",
    "command": "gitProjectManager.openProjectNewWindow",
  },
  // Toggle Explorer
  {
    "key": "cmd+1",
    "command": "workbench.view.explorer",
    "when": "!explorerViewletVisible"
  },
  {
    "key": "cmd+1",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletVisible"
  },
  // Toggle Terminal
  {
    "key": "cmd+2",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  // Toggle Search
  {
    "key": "cmd+3",
    "command": "workbench.view.search",
    "when": "!activeViewlet == 'workbench.view.search'"
  },
  {
    "key": "cmd+3",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "activeViewlet == 'workbench.view.search'"
  },
  {
    "key": "cmd+shift+f",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "view.workbench.view.search.visible"
  },
  // Toggle Git
  {
    "key": "cmd+4",
    "command": "workbench.view.scm",
    "when": "!view.workbench.scm.visible"
  },
  {
    "key": "cmd+4",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "view.workbench.scm.visible"
  },
  // LSP
  {
    "key": "cmd+enter",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
  },
  { // Goto Definition
    "key": "cmd+.",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  {
    "key": "cmd+,",
    "command": "workbench.action.navigateBack"
  },
  // Goto references
  {
    "key": "cmd+shift+.",
    "command": "editor.action.goToReferences"
  },
  // Editor Layout
  {
    "key": "cmd+\\",
    "command": "workbench.action.editorLayoutTwoColumns",
  },
  {
    "key": "cmd+shift+\\",
    "command": "workbench.action.editorLayoutSingle",
  },
  // Consisten Ctrl n / p
  {
    "key": "ctrl+n",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },
  {
    "key": "ctrl+p",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus || suggestWidgetVisible && textInputFocus && !suggestWidgetHasFocusedSuggestion"
  },
  {
    "key": "ctrl+n",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
]
