cursor-style-blink = false
mouse-hide-while-typing = true
macos-option-as-alt = true
window-padding-x = 0
window-padding-y = 0
shell-integration-features=no-cursor
window-decoration = none
maximize=true

keybind = cmd+n=next_tab
keybind = cmd+p=previous_tab
keybind = cmd+f=toggle_split_zoom

keybind = ctrl+shift+enter=toggle_maximize
keybind = shift+right=next_tab
keybind = shift+left=previous_tab
keybind = ctrl+shift+f=toggle_split_zoom

background = #000000
foreground = #ffffff
cursor-color = green
